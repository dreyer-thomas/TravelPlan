generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  OWNER
  VIEWER
}

enum PreferredLanguage {
  en
  de
}

enum AccommodationStatus {
  PLANNED
  BOOKED
}

model User {
  id           String   @id @default(cuid()) @map("id")
  email        String   @unique @map("email")
  passwordHash String   @map("password_hash")
  role         UserRole @default(OWNER) @map("role")
  preferredLanguage PreferredLanguage @default(en) @map("preferred_language")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  passwordResetTokens PasswordResetToken[]
  trips        Trip[]

  @@map("users")
}

model PasswordResetToken {
  id        String   @id @default(cuid()) @map("id")
  userId    String   @map("user_id")
  tokenHash String   @map("token_hash")
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false) @map("used")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "idx_trips_user_id")
  @@unique([tokenHash])
  @@map("password_reset_tokens")
}

model Trip {
  id        String   @id @default(cuid()) @map("id")
  userId    String   @map("user_id")
  name      String   @map("name")
  startDate DateTime @map("start_date")
  endDate   DateTime @map("end_date")
  heroImageUrl String? @map("hero_image_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  days  TripDay[]

  @@index([userId])
  @@map("trips")
}

model TripDay {
  id        String   @id @default(cuid()) @map("id")
  tripId    String   @map("trip_id")
  date      DateTime @map("date")
  dayIndex  Int      @map("day_index")
  imageUrl  String?  @map("image_url")
  note      String?  @map("note")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
  accommodation Accommodation?
  dayPlanItems  DayPlanItem[]

  @@index([tripId], map: "idx_trip_days_trip_id")
  @@map("trip_days")
}

model Accommodation {
  id        String   @id @default(cuid()) @map("id")
  tripDayId String   @unique(map: "idx_accommodations_trip_day_id") @map("trip_day_id")
  name      String   @map("property_name")
  status    AccommodationStatus @default(PLANNED) @map("status")
  costCents Int?     @map("cost_cents")
  link      String?  @map("link_url")
  locationLat Float? @map("location_lat")
  locationLng Float? @map("location_lng")
  locationLabel String? @map("location_label")
  notes     String?  @map("notes")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tripDay TripDay @relation(fields: [tripDayId], references: [id], onDelete: Cascade)
  images  AccommodationImage[]

  @@map("accommodations")
}

model DayPlanItem {
  id        String   @id @default(cuid()) @map("id")
  tripDayId String   @map("trip_day_id")
  contentJson String @map("content_json")
  costCents Int?     @map("cost_cents")
  linkUrl   String?  @map("link_url")
  locationLat Float? @map("location_lat")
  locationLng Float? @map("location_lng")
  locationLabel String? @map("location_label")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tripDay TripDay @relation(fields: [tripDayId], references: [id], onDelete: Cascade)
  images  DayPlanItemImage[]

  @@index([tripDayId], map: "idx_day_plan_items_trip_day_id")
  @@map("day_plan_items")
}

model AccommodationImage {
  id              String   @id @default(cuid()) @map("id")
  accommodationId String   @map("accommodation_id")
  imageUrl        String   @map("image_url")
  sortOrder       Int      @map("sort_order")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  accommodation Accommodation @relation(fields: [accommodationId], references: [id], onDelete: Cascade)

  @@index([accommodationId], map: "idx_accommodation_images_accommodation_id")
  @@unique([accommodationId, sortOrder], map: "idx_accommodation_images_order")
  @@map("accommodation_images")
}

model DayPlanItemImage {
  id            String   @id @default(cuid()) @map("id")
  dayPlanItemId String   @map("day_plan_item_id")
  imageUrl      String   @map("image_url")
  sortOrder     Int      @map("sort_order")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  dayPlanItem DayPlanItem @relation(fields: [dayPlanItemId], references: [id], onDelete: Cascade)

  @@index([dayPlanItemId], map: "idx_day_plan_item_images_item_id")
  @@unique([dayPlanItemId, sortOrder], map: "idx_day_plan_item_images_order")
  @@map("day_plan_item_images")
}
